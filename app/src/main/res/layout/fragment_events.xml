<!-- fragment_screen_slide_page.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_events"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CalendarView
        android:id="@+id/events_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorBackgroundFloating"
        android:elevation="3dp"
        >
    </CalendarView>

    <!--TODO: change text programmatically according to date -->
    <!--TODO: darker grey text color -->
    <TextView
        android:id="@+id/events_calendar_separator"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@id/events_view"
        android:background="@color/colorAccentLite"
        android:textAlignment="center"
        android:text="@string/event_calendar_separator_text"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/events_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/events_calendar_separator"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/events_fab"
        app:elevation="4dp"
        app:borderWidth="0dp"
        app:backgroundTint="@color/colorAccentTeal"
        android:src="@drawable/ic_plus_white_18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>