<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_email_item"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:background="?selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/textView_email_title"
        android:layout_width="256dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_email_item"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:lines="1"
        android:ellipsize="end"
        tools:text="fsdfsdafasdfasdsd" />

    <TextView
        android:id="@+id/textView_email_subject"
        android:layout_width="286dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@+id/guideline_email_item"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/gray"
        android:textSize="12sp"
        tools:text="HI" />

    <TextView
        android:id="@+id/textView_email_date"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_email_item"
        app:layout_constraintRight_toRightOf="parent"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="date" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_email_item"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>
